{
    "manifest_version": 3,
    "name": "Fuo File Downloader",
    "version": "1.1",
    "description": "Download all attachments from fuoverflow.com as a ZIP file",
    "permissions": [
        "tabs",
        "downloads",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://fuoverflow.com/*",
        "http://fuoverflow.com/*"
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": [
            "http://fuoverflow.com/*",
            "https://fuoverflow.com/*"
        ],
        "js": [
            "content.js"
        ],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [{
        "resources": [
            "popup.html",
            "popup.js",
            "jszip.min.js",
            "icon16.png",
            "icon48.png",
            "icon128.png"
        ],
        "matches": [
            "http://fuoverflow.com/*",
            "https://fuoverflow.com/*"
        ]
    }],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}